<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PracticeF1App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PracticeF1App"
    xmlns:views="clr-namespace:PracticeF1App.UI"
    Shell.FlyoutBehavior="Flyout"
    Title="PracticeF1App">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Team"
        ContentTemplate="{DataTemplate views:Team}"
        Route="Team" />
    <ShellContent
        Title="Race"
        ContentTemplate="{DataTemplate views:Race}"
        Route="Race" />
    <ShellContent
        Title="Result"
        ContentTemplate="{DataTemplate views:Result}"
        Route="Result" />

</Shell>
